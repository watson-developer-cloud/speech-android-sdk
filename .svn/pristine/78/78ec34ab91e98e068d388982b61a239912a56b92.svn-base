    public void showRawResult(QueryResult result){
        // For the performance log
        JSONObject jResult = null;
        if (result != null) {
            // Set transcript received from iTrans
            if(this.isUsingWebSocket()){
                Logger.i(TAG, "this.isUsingWebSocket(): getVADTranscript()");
                this.sendMessage(VaniDelegate.MESSAGE, result); // Created simple result because of VANI API Integration
                return;
            }

            if(this.isUseTTS() || this.getIsUsingVaniAPI() == false){
                Logger.i(TAG, "this.isUseTTS() || this.getIsUsingVaniAPI() == false");
                if(result.getStatusCode() == QueryResult.STATUS_OK){
                    // convert raw data into values
                    result.analyzeRawData();
                    //
                    this.setTranscript(result.getTranscript());

                    PlayerUtil.ins8k.resetTTSDecodingTime();
                    // SUCCESS result
                    if (result.getListFaces().indexOf('{')!=-1 && result.getListFaces().indexOf('{') == result.getListFaces().lastIndexOf('{')) {
                        //only one
                    } else {
                        if (this.isUseTTS() && mAm.getRingerMode() == 2) { // ringtone mode = AudioManager.RINGER_MODE_NORMAL
                            if ("".equals(result.getTranscript())) // I don't understand
                                PlayerUtil.ins8k.playIdontUnderstand(getAppCtx());
                            else if (result.getTtsIFound().length > 0) {
                                PlayerUtil.ins8k.playSPX(result.getTtsIFound());
                                try {
                                    Logger.i(TAG, "### WAIT FOR DECODING TTS...");

                                    synchronized (PlayerUtil.LOCK) {
                                        PlayerUtil.LOCK.wait();
                                    }
                                    Logger.i(TAG, "### TTS DATA HAS BEEN DECODED...");
                                }
                                catch (InterruptedException e){
                                    e.printStackTrace();
                                }
                            }
                        }
                    }

                    jResult = result.toSuccessJson();

                    try {
                        jResult.put("decodingTTSTime", PlayerUtil.ins8k.getTTSDecodingTime());
                    } catch (JSONException e) {
                        e.printStackTrace();
                    }

                    if(getVaniService().equals(VANI_SERVICE_FACES)){
                        this.sendMessage(VaniDelegate.MESSAGE, result);
                    }
                    else{
                        this.sendMessage(VaniDelegate.MESSAGE, result);
                    }
                }
                // FAILURE result, statusCode = 101 (Time out)/102 (Cancel all)/401 (IOException)
                else {
                    Logger.w(TAG, "Failed to get transcription");

                    jResult = result.toFailureJson();
                    this.sendMessage(VaniDelegate.ERROR, result);
                }
            }
            // VANI API Integration
            else if(this.getIsUsingVaniAPI()){
                byte[] rawData = result.getRawResult();
                if(rawData == null){
                    Logger.w(TAG, "rawData is null");
                    this.sendMessage(VaniDelegate.ERROR, new QueryResult(QueryResult.UNKNOWN_ERROR, QueryResult.UNKNOWN_ERROR_MESSAGE));
                }
                else {
                    String jsonString = new String(rawData);
                    try {
                        JSONObject jsonResponse = new JSONObject(jsonString);
                        int statusCode = jsonResponse.getInt("code");
                        JSONObject jsonData = jsonResponse.getJSONObject("data");
                        String transcription = jsonData.getString("transcription");
                        String jobId = jsonData.getString("jobId");
                        String ttsTime = jsonData.getString("ttsTime");
                        String vbeTime = jsonData.getString("vbeTime");
                        String requestLength = jsonData.getString("requestLength");
                        String serviceTime = jsonData.getString("serviceTime");
                        String s2tTime = jsonData.getString("s2tTime");
                        result.setStatusCode(statusCode);
                        result.setTranscript(transcription);
                        result.setJobId(jobId);
                        result.setTtsTime(ttsTime);
                        result.setProcessingVBETime(vbeTime);
                        result.setRequestLength(requestLength);
                        result.setQryFaceTime(serviceTime);
                        result.setS2tTime(s2tTime);
                        result.setResponseLength(rawData.length);
                        jResult = new JSONObject();
                        jResult.put("decodingTTSTime", 0);

                        Logger.w(TAG, "### RESPONSE ###");
                        Logger.w(TAG, jsonString);
                        Logger.w(TAG, "### /RESPONSE ###");

                        if (statusCode == 200) {
                            JSONObject servicePayload = jsonData.getJSONObject("servicePayload");
                            String serviceResult = servicePayload.getString("serviceResult");
                            result.setListFaces(serviceResult);
                            // empty transcription
                            if(transcription.equals("")){
                                result.setStatusCode(QueryResult.EMPTY_TRANSCRIPTION_ERROR);
                                result.setStatusMessage(QueryResult.EMPTY_TRANSCRIPTION_ERROR_MESSAGE);
                                this.sendMessage(VaniDelegate.ERROR, result);
                            }
                            else {
                                result.setStatusCode(QueryResult.STATUS_OK);
                                result.setStatusMessage(QueryResult.STATUS_OK_MESSAGE);
                                this.sendMessage(VaniDelegate.MESSAGE, result);
                            }
                        }
                        else {
                            result.setStatusCode(QueryResult.UNKNOWN_ERROR);
                            result.setStatusMessage(QueryResult.UNKNOWN_ERROR_MESSAGE);
                            this.sendMessage(VaniDelegate.ERROR, result);
                        }
                        Logger.w(TAG, "statusCode: "+ statusCode);
                    } catch (JSONException e) {
                        // TODO Auto-generated catch block
                        e.printStackTrace();
                        result.setStatusMessage(e.getLocalizedMessage());
                        this.sendMessage(VaniDelegate.ERROR, result);
                    }
                }
            }
            // result.getStatusCode() != QueryResult.TIME_OUT
            if(result != null && result.getStatusCode() != QueryResult.CANCEL_ALL){
                this.sendPerformanceLog(jResult, result);
            }
        }
        else {
//                Logger.w(TAG, "Query result: ERROR code 401");
            if (isUseTTS() && mAm.getRingerMode() == 2)
                PlayerUtil.ins8k.playIdontUnderstand(getAppCtx());
            this.sendMessage(VaniDelegate.ERROR, new QueryResult(QueryResult.AUTHENTICATION_FAILED, QueryResult.AUTHENTICATION_FAILED_MESSAGE));
        }
    }

